

@model Account
@using Eshop.Models



<form asp-action="create_Account" class="col-md-4" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" >
    <div class="form-group">
        <label asp-for="Username" class="control-lable"></label>
        <input asp-for="Username" class="form-control" >
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-lable"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-lable"></label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="control-lable"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-lable"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName" class="control-lable"></label>
        <input asp-for="FullName" class="form-control">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="IsAdmin" >
    <div class="form-group">
        <label asp-for="ImageFile" class="control-lable"></label>
        <input asp-for="ImageFile" class="form-control">
        <span asp-validation-for="Avatar" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Status" >
    

    <button class="btn btn-success">Add</button>
 
</form>


<div>
    <a asp-action="login">back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}