@model Product
<div class="col-lg-4 col-md-6">
    <div class="single-product">
        <div class="product-img">
            <img class="img-fluid w-100" src="~/img/product/@Model.Image" alt="" />
            <div class="p_icon">
                <a href="#">
                    <i class="ti-eye"></i>
                </a>
                <a href="#">
                    <i class="ti-heart"></i>
                </a>
                <a href="#">
                    <i class="ti-shopping-cart"></i>
                </a>
            </div>
        </div>
        <div class="product-btm">
            <a href="#" class="d-block">
                <h4>@Model.Name</h4>
            </a>
            <div class="mt-3">
                <span class="mr-4">@Model.Price VND</span>
                <del>@Model.Price VND</del>
            </div>
        </div>
    </div>
</div>
