@model IEnumerable<Product>
@inject IHttpContextAccessor Accessor
@section CSS {
	<style>
				*{
			box-sizing: border-box;
			padding: 0;
			margin: 0;
		}
				.section_gap {
					padding: 10px 0px;
				}

				.search {
					text-align: center;
				}

				.tabproduct a {
					display: inline-block;
					margin-left: 7px;
					padding: 14px;
					background-color: white;
					border-radius: 1px;
					box-shadow: 2px 2px #bf787847;
					border-radius: 5px;
					border: 2px solid #bee893;
				}

				.btn-group-lg > .btn, .btn-lg {
					font-size: small;
				}

				.btn-primary {
					color: #71cd14;
				}

				.form-inline {
					flex-flow: nowrap;
				}
	</style>
}

	@{
	ViewData["Title"] = "Products";


	var id = Accessor.HttpContext.Session.GetInt32("id");
	if (id == null) id = -1;



}
<!-- Đoạn cần thêm -->
<!-- Kết thúc -->

<section class="cat_product_area section_gap">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="product">
					<nav class="bg-light">
						@using (Html.BeginForm("Shop", "Products", new { @class = "from-inline" }))
						{
							<div class="row">
								<div class="col-lg-4">
									<div class="row">
										<div class="col-lg-3"><label>Tên sách:</label></div>
										<div class="col-lg-9 pl-0"> <input type="Text" class="form-control mx-sm-3" value="@ViewBag.Keyword" name="searchString" placeholder="Nhập tên sách cần tìm"></div>
									</div>
								</div>
								<div class="col-lg-4">
									<div class="row">
										<div class="col-lg-4">Chủ đề:</div>
										<div class="col-lg-8 px-0">@Html.DropDownList("producttytleID",null,htmlAttributes:new{@class="form-control"})</div>
									</div>
								</div>

								<div class="col">
									<input type="submit" class="btn btn-danger" value="Tìm sách">
								</div>
								<div class="col-3">
									<aside class="left_widgets p_filter_widgets">
										<div class="widgets_inner">
											<div class="range_item">
												<div id="slider-range"></div>
												<div class="">
													<label for="amount">Price : </label>
													<input type="text" id="amount" readonly />
												</div>
											</div>
										</div>
									</aside>
								</div>
							</div>




						}
					</nav>
				</div>
				<div class="latest_product_inner">
					<div class="row">
						@foreach (var item in Model)
						{
							<div class="col-lg-4 col-md-6">
								<div class="single-product">
									<div class="product-img">
										<img class="card-img"
										 src="~/img/product/@item.Image"
										 alt=".Name" />
										<div class="p_icon">
											<a href="#">
												<i class="ti-eye"></i>
											</a>
											<a href="#">
												<i class="ti-heart"></i>
											</a>
											<a asp-controller="Carts" asp-action="addCreate" asp-route-AccountId="@id" asp-route-ProductId="@item.Id" asp-route-soluong="1">
												<i class="ti-shopping-cart"></i>
											</a>

										</div>
									</div>
									<div class="product-btm">
										<a href="#" class="d-block">
											<h4>@item.Name</h4>
										</a>
										<div class="mt-3">
											<span class="mr-4">@item.Price VND</span>
											<del>@item.Price VND</del>
										</div>
									</div>
								</div>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="tabproduct">
	<div class="container">
		<div class="row flex-row-reverse">
			<div class="col-lg-9">
				@if (ViewBag.tab != null)
				{
					for (var i = 1; i <= ViewBag.tab; i++)
					{
						<a asp-action="Index" asp-route-page="@i">@i</a>
					}
				}
			</div>
			<div class="col-lg-3"></div>
		</div>
	</div>

</section>
@section jqeryajax{
	<script src="~/lib/vendors/jquery-ui/jquery-ui.js"></script>

}
