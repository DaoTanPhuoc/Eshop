@model Eshop.Models.Product

@{
    ViewData["Title"] = "Details";
    var stock = @Html.DisplayFor(model => model.Stock);
    var a = "Còn hàng";
    if (stock==null) a=a;
    else a = "Hết hàng";
}
@section acs{
    <style>
 .carousel-indicators{
        height:92px;
    }
</style>
   
}

    <!--================Single Product Area =================-->
    <div class="product_image_area">
      <div class="container">
        <div class="row s_product_inner">
          <div class="col-lg-6">
            <div class="s_product_img">
              <div
                id="carouselExampleIndicators"
                class="carousel slide"
                data-ride="carousel"
              >
                <ol class="carousel-indicators">
                  <li
                    data-target="#carouselExampleIndicators"
                    data-slide-to="0"
                    class="active"
                  >
                    <img style="width:100%"
                      src="~/img/product/@Html.DisplayFor(model => model.Image)"
                      alt=""
                    />
                  </li>
                  <li 
                    data-target="#carouselExampleIndicators"
                    data-slide-to="1"
                  >
                    <img style="width:100%"
                      src="~/img/product/@Html.DisplayFor(model => model.Image)"
                      alt=""
                    />
                  </li>
                  <li
                    data-target="#carouselExampleIndicators"
                    data-slide-to="2"
                  >
                    <img style="width:100%"
                      src="~/img/product/@Html.DisplayFor(model => model.Image)"
                      alt=""
                    />
                  </li>
                </ol>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img
                      class="d-block w-100"
                      src="~/img/product/@Html.DisplayFor(model => model.Image)"
                      alt="First slide"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      class="d-block w-100"
                      src="~/img/product/@Html.DisplayFor(model => model.Image)"
                      alt="Second slide"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      class="d-block w-100"
                      src="~/img/product/@Html.DisplayFor(model => model.Image)"
                      alt="Third slide"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-5 offset-lg-1">
            <div class="s_product_text">
              <h3> @Html.DisplayFor(model => model.Name)</h3>
              <h2>$@Html.DisplayFor(model => model.Price)</h2>
              <ul class="list">
                <li>
                  <a class="active" href="#">
                    <span>Category</span> : @Html.DisplayFor(model => model.ProductType.Name)</a
                  >
                </li>
                <li>
                  <a href="#"> <span>Availibility</span> : @a</a>
                </li>
              </ul>
              <p>
               @Html.DisplayFor(model => model.Description)
              </p>
              <div class="product_count">
                <label for="qty">Quantity:</label>
                <input
                  type="text"
                  name="qty"
                  id="sst"
                  maxlength="12"
                  value="1"
                  title="Quantity:"
                  class="input-text qty"
                />
                <button
                  onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;"
                  class="increase items-count"
                  type="button"
                >
                  <i class="lnr lnr-chevron-up"></i>
                </button>
                <button
                  onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;"
                  class="reduced items-count"
                  type="button"
                >
                  <i class="lnr lnr-chevron-down"></i>
                </button>
              </div>
              <div class="card_area">
                <a class="main_btn" href="#">Add to Cart</a>
                <a class="icon_btn" href="#">
                  <i class="lnr lnr lnr-diamond"></i>
                </a>
                <a class="icon_btn" href="#">
                  <i class="lnr lnr lnr-heart"></i>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    @section jqeryajax{
	<script src="~/lib/vendors/jquery-ui/jquery-ui.js"></script>

}
